<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
          <VBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0">
              <children>
                  <Label text="Budget name" />
                  <TextField fx:id="budgetNameTextField" promptText="Budget name">
               <VBox.margin>
                  <Insets left="2.0" right="20.0" />
               </VBox.margin></TextField>
            <HBox>
               <children>
                  <Label text="Start Date for Budget">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="End Date For Budget">
                     <HBox.margin>
                        <Insets left="180.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets bottom="20.0" left="5.0" right="20.0" top="10.0" />
               </VBox.margin>
               <children>
                  <DatePicker fx:id="startDatePicker" editable="false" onAction="#getStartDate" promptText="Start Date" />
                  <DatePicker fx:id="endDatePicker" editable="false" onAction="#getEndDate" promptText="End Date" />
               </children>
            </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="submitButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSubmit" text="Submit" />
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#closeDialog" text="Cancel">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                    </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
                </HBox>
              </children>
          </VBox>
    </children>
</AnchorPane>
