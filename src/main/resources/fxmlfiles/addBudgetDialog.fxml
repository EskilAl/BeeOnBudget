<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="300.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane layoutX="-14.0" layoutY="40.0" prefHeight="300.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label text="Budget name"/>
                        <TextField fx:id="budgetNameTextField" promptText="Budget name"/>
                    </children>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </VBox>
                <HBox alignment="CENTER" spacing="10.0" GridPane.rowIndex="1">
                    <children>
                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" text="Submit"/>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#closeDialog"
                                text="Cancel"/>
                        <Region/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</AnchorPane>
